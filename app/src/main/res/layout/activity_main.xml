<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/colorPrimaryDark"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        app:menu="@menu/main_menu">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_hotelsng_logo" />

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text=" Leaderboard"
            android:gravity="center_vertical"
            android:textAppearance="?attr/textAppearanceHeadline5" />

    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_margin="16dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <LinearLayout
                android:id="@+id/lin1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                card_view:cardCornerRadius="50dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:strokeColor="@color/dividerColor"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorPrimaryDark"
                >


                <ImageView
                    android:id="@+id/top2_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_man2"
                    android:layout_gravity="center"
                    />



            </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

                <TextView
                    android:id="@+id/top2_index"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="bottom|center"
                    android:layout_centerInParent="true"
                    android:background="@drawable/index_circle2"
                    android:gravity="center"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="#000000"
                    android:text="2" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/lin1"
                android:orientation="vertical">


            <TextView
                android:id="@+id/top2_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="4dp"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:text="Victor Chukwurah"
                />

            <TextView
                android:id="@+id/top2_slack_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="4dp"
                android:textSize="14sp"
                android:textAlignment="center"
                android:textColor="@color/customTextColor"
                android:text="Webster"
                />

                <TextView
                    android:id="@+id/top2_slack_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/customTextColor"
                    android:text="50 points"
                    />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_weight="1.5"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                card_view:cardCornerRadius="75dp"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:strokeColor="@color/dividerColor"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorPrimaryDark"
                >

                <ImageView
                    android:id="@+id/top1_image"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_man4"
                    android:layout_gravity="center"
                    />

            </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:id="@+id/top1_index"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerInParent="true"
                android:background="@drawable/index_circle"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                android:textColor="#000000"
                android:textSize="24sp"
                android:text="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_below="@id/lin2"
                android:layout_marginTop="-3dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/top1_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_marginBottom="4dp"
                    android:text="Seyi Onifade"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceHeadline6"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/top1_slack_handle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:text="Xyluz"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/customTextColor" />

                <TextView
                    android:id="@+id/top1_slack_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="50 points"
                    android:textAlignment="center"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textColor="@color/customTextColor"
                    android:textSize="14sp" />

            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/lin3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                card_view:cardCornerRadius="50dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                app:cardElevation="0dp"
                app:strokeColor="@color/dividerColor"
                app:strokeWidth="1dp"
                app:cardBackgroundColor="?attr/colorPrimaryDark"
               >

                <ImageView
                    android:id="@+id/top3_image"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_woman2"
                    android:layout_gravity="center"
                    />

            </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <TextView
                android:id="@+id/top3_index"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="bottom|center"
                android:layout_centerInParent="true"
                android:background="@drawable/index_circle3"
                android:gravity="center"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#000000"
                android:text="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_below="@id/lin3"
                android:orientation="vertical">

            <TextView
                android:id="@+id/top3_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceHeadline6"
                android:layout_marginBottom="4dp"
                android:textSize="14sp"
                android:layout_marginTop="25dp"
                android:textAlignment="center"
                android:text="Mbanefo Kenechukwu"
                />

            <TextView
                android:id="@+id/top3_slack_handle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="?attr/textAppearanceBody2"
                android:layout_marginBottom="4dp"
                android:textColor="@color/customTextColor"
                android:textSize="14sp"
                android:textAlignment="center"
                android:text="kayneh"
                />

                <TextView
                    android:id="@+id/top3_slack_point"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?attr/textAppearanceBody2"
                    android:textSize="14sp"
                    android:textAlignment="center"
                    android:textColor="@color/customTextColor"
                    android:text="50 points"
                    />

            </LinearLayout>

        </RelativeLayout>


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:src="@drawable/main_divider" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/leaderboard_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        tools:listitem="@layout/recycler_view_list_items"
        />

</LinearLayout>